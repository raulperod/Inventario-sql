extends ../layout.pug
block contenido

  #page-wrapper
    .row
      .col-lg-12
        h3.page-header Lista de productos
    .row
      .col-lg-10.col-lg-offset-1
        form( id="formconsumo", style="display:inline", action="/categoria/get", method="POST")
          .form-groups
            .panel-body
              .col-lg-4
              .col-lg-4
              .col-lg-4
                label Categoria:
                select.form-control(id="categoria" name="categoria" )
                  for categoria in categorias
                    option(name="1") #{categoria.nombre}          
    .row
      .col-lg-12
        .panel.panel-default
          .panel-heading
            | Productos
          .panel-body
            table#dataTables-example.table.table-striped.table-bordered.table-hover
              thead
                tr
                  th Nombre
                  th Descripcion
                  th Codigo
                  th Minimo
                  th Basico
                  th Acci√≥n
              tbody
                tr.odd.gradeX
                    
