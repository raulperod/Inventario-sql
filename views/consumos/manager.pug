extends ../layout.pug
block contenido

  #page-wrapper
    .row
      .col-lg-12
        h3.page-header Productos en consumo
    .row
      .col-lg-12
        .panel.panel-default
          .panel-heading
            | Productos
          .panel-body
            table#dataTables-example.table.table-striped.table-bordered.table-hover
              thead
                tr
                  th Nombre
                  th Codigo
                  th Cantidad
                  if usuario.permisos < 2
                    th AcciÃ³n
              tbody
                if usuario.permisos < 2
                  for consumo in consumos
                    tr.odd.gradeX
                      td #{consumo.nombreProducto}
                      td #{consumo.codigo}
                      td(name=""+consumo.idAlmacen) #{consumo.cantidadConsumo}
                      td
                        if !consumo.esBasico
                          form(id=""+consumo.idAlmacen,style="display:inline" action="/consumos/"+consumo.idAlmacen+"?_method=PUT",method="POST",  onsubmit="return false")
                            input.form-control(id=""+consumo.codigo,type="number" name="cantidad" min="0" max="10000" value="0" required )
                            b &nbsp &nbsp &nbsp
                            button(type="submit/image" alt="text" name="button1" class="btn btn-danger btn-circle "+consumo.idAlmacen+" "+consumo.codigo ,onclick="return false")
                              i.fa.fa-times(title="Pasar a bajas")
                        else
                          
                          fieldset( disabled='')
                            form(style="display:inline" action="/consumos/"+consumo.idAlmacen+"?_method=PUT",method="POST",   onsubmit="return false")
                              input#disabledInput.form-control(type="number" name="cantidad" min="0" max="10000" value="0" required disabled )
                              b &nbsp &nbsp &nbsp
                              button(type="submit/image" alt="text" class="btn btn-danger btn-circle")
                                i.fa.fa-times(title="Pasar a bajas")
                  
                else

                  for consumo in consumos
                    tr.odd.gradeX
                      td #{consumo.nombreProducto}
                      td #{consumo.codigo}
                      td #{consumo.cantidadConsumo}
