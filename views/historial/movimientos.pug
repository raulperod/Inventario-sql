    if usuario.permisos === 2
      script.
        $(document).ready(function() {
          $('#dataTables-example').DataTable({
            responsive: true,
            "order": [[ 6, "desc" ]]
          });
        });

    else
      
      script.
        $(document).ready(function() {
          $('#dataTables-example').DataTable({
            responsive: true,
            "order": [[ 5, "desc" ]]
          });
        });
        
    script.
      $("table").tableExport({
          formats: ["xlsx"],
