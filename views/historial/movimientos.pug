extends ../layout.pug
block contenido
  
  #page-wrapper
    .row
      .col-lg-12
        h3.page-header Registro de Movimientos
    .row
      .col-lg-12
        .panel.panel-default
          .panel-heading
            | Productos
          .panel-body
            table#dataTables-example.table.table-striped.table-bordered.table-hover
              thead
                tr
                  th Producto
                  th Cantidad
                  th Tipo
                  th Usuario
                  th Tecnica  
                  if usuario.permisos === 2
                    th Sucursal
                  th Fecha
              tbody
                if usuario.permisos === 1
                  for movimiento in movimientos
                    tr.odd.gradeX
                      td #{movimiento.nombreProducto}
                      td #{movimiento.cantidad}
                      if movimiento.tipo === 0
                        td Paso a consumo
                      else
                        td Agrego producto

                      td #{movimiento.nombreUsuario}
                      td Sin tecnica

                      if movimiento.fecha.getMonth() < 10
                        - var month = "0"+movimiento.fecha.getMonth()
                      else
                        - var month = movimiento.fecha.getMonth()
                      
                      if movimiento.fecha.getDate() < 10
                        - var day = "0"+movimiento.fecha.getDate()
                      else
                        - var day = movimiento.fecha.getDate()
                      
                      if movimiento.fecha.getHours() < 10
                        - var hour = "0"+movimiento.fecha.getHours()
                      else
                        - var hour = movimiento.fecha.getHours()
                      
                      if movimiento.fecha.getMinutes()  < 10
                        - var minute = "0"+ movimiento.fecha.getMinutes()
                      else
                        - var minute =  movimiento.fecha.getMinutes()
                      
                      if movimiento.fecha.getSeconds() < 10
                        - var second = "0"+movimiento.fecha.getSeconds()
                      else
                        - var second = movimiento.fecha.getSeconds()
                             
                      td #{movimiento.fecha.getFullYear()}/#{month}/#{day} #{hour}:#{minute}:#{second}

                  for asignacion in asignaciones
                    tr.odd.gradeX
                      td #{asignacion.nombreProducto}
                      td 1
                      td Paso a consumo
                      td #{asignacion.nombreUsuario}
                      td #{asignacion.nombreTecnica}

                      if asignacion.fecha.getMonth() < 10
                        - var month = "0"+asignacion.fecha.getMonth()
                      else
                        - var month = asignacion.fecha.getMonth()

                      if asignacion.fecha.getDate() < 10
                        - var day = "0"+asignacion.fecha.getDate()
                      else
                        - var day = asignacion.fecha.getDate()

                      if asignacion.fecha.getHours() < 10
                        - var hour = "0"+asignacion.fecha.getHours()
                      else
                        - var hour = asignacion.fecha.getHours()

                      if asignacion.fecha.getMinutes() < 10
                        - var minute = "0"+ asignacion.fecha.getMinutes()
                      else
                        - var minute =  asignacion.fecha.getMinutes()

                      if asignacion.fecha.getSeconds() < 10
                        - var second = "0"+asignacion.fecha.getSeconds()
                      else
                        - var second = asignacion.fecha.getSeconds()

                      td #{asignacion.fecha.getFullYear()}/#{month}/#{day} #{hour}:#{minute}:#{second}

                else

                  for movimiento in movimientos
                    tr.odd.gradeX
                      td #{movimiento.nombreProducto}
                      td #{movimiento.cantidad}
                      if movimiento.tipo === 0
                        td Paso a consumo
                      else
                        td Agrego producto

                      td #{movimiento.nombreUsuario}
                      td Sin tecnica
                      td #{movimiento.plaza}

                      if movimiento.fecha.getMonth() < 10
                        - var month = "0"+movimiento.fecha.getMonth()
                      else
                        - var month = movimiento.fecha.getMonth()

                      if movimiento.fecha.getDate() < 10
                        - var day = "0"+movimiento.fecha.getDate()
                      else
                        - var day = movimiento.fecha.getDate()

                      if movimiento.fecha.getHours() < 10
                        - var hour = "0"+movimiento.fecha.getHours()
                      else
                        - var hour = movimiento.fecha.getHours()

                      if movimiento.fecha.getMinutes() < 10
                        - var minute = "0"+ movimiento.fecha.getMinutes()
                      else
                        - var minute =  movimiento.fecha.getMinutes()

                      if movimiento.fecha.getSeconds() < 10
                        - var second = "0"+movimiento.fecha.getSeconds()
                      else
                        - var second = movimiento.fecha.getSeconds()

                      td #{movimiento.fecha.getFullYear()}/#{month}/#{day} #{hour}:#{minute}:#{second}

                  for asignacion in asignaciones
                    tr.odd.gradeX
                      td #{asignacion.nombreProducto}
                      td 1
                      td Paso a consumo
                      td #{asignacion.nombreUsuario}
                      td #{asignacion.nombreTecnica}
                      td #{asignacion.plaza}

                      if asignacion.fecha.getMonth() < 10
                        - var month = "0"+asignacion.fecha.getMonth()
                      else
                        - var month = asignacion.fecha.getMonth()

                      if asignacion.fecha.getDate() < 10
                        - var day = "0"+asignacion.fecha.getDate()
                      else
                        - var day = asignacion.fecha.getDate()

                      if asignacion.fecha.getHours() < 10
                        - var hour = "0"+asignacion.fecha.getHours()
                      else
                        - var hour = asignacion.fecha.getHours()

                      if asignacion.fecha.getMinutes() < 10
                        - var minute = "0"+ asignacion.fecha.getMinutes()
                      else
                        - var minute =  asignacion.fecha.getMinutes()

                      if asignacion.fecha.getSeconds() < 10
                        - var second = "0"+asignacion.fecha.getSeconds()
                      else
                        - var second = asignacion.fecha.getSeconds()

                      td #{asignacion.fecha.getFullYear()}/#{month}/#{day} #{hour}:#{minute}:#{second}
