extends ../layout.pug
block contenido

  #page-wrapper
    .row
      .col-lg-12
        h3.page-header Lista de usuarios
    .row
      .col-lg-12
        .panel.panel-default
          .panel-heading
            | Usuarios
          .panel-body
            table#dataTables-example.table.table-striped.table-bordered.table-hover
              thead
                tr
                  th Usuario
                  th Nombres
                  th Apellidos
                  if usuario.permisos === 2
                    th Sucursal
                    th Permisos
                  th Estado
                  th Acci√≥n
              tbody
                if usuario.permisos === 2
                  for user in usuarios
                    tr.odd.gradeX
                      td #{user.username}
                      td #{user.nombre}
                      td #{user.apellido}
                      td #{user.plaza}
                      if user.permisos === 1
                        td Administrador
                      else
                        td Recepcionista
                      if user.status
                        td Activo
                      else
                        td Inactivo
                      td
                        a(class="btn btn btn-primary btn-circle" href="/users/"+user.idUsuario)
                          i.fa.fa-list(title="Editar")

                else

                  for user in usuarios
                    tr.odd.gradeX
                      td #{user.username}
                      td #{user.nombre}
                      td #{user.apellido}
                      if user.status
                        td Activo
                      else
                        td Inactivo
                      td
                        a(class="btn btn btn-primary btn-circle" href="/users/"+user.idUsuario)
                          i.fa.fa-list(title="Editar")
