extends ../layout.pug
block contenido
  #page-wrapper
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Editar usuario
          .panel-body
            #aviso
            form(action="/users/"+usuarioUpdate.idUsuario+"?_method=PUT", method="POST", id="formUpdate")
              fieldset
                .form-group
                  h5  Usuario:
                  input.form-control(type="text", name="username", value=usuarioUpdate.username, id="user" required)
                .form-group
                  h5  Nombres:
                  input.form-control(type="text", name="name", value=usuarioUpdate.nombre , id="name" required)
                .form-group
                  h5  Apellidos:
                  input.form-control(type="text" , name="last_name", value=usuarioUpdate.apellido , id="last", required)
                .form-group
                  h5  Contraseña:
                  input.form-control(type="text" , name="password", placeholder="Contraseña", id="pass" required)
                .form-group
                  h5  Confirmación de contraseña:
                  input.form-control(type="text" , name="password_confirmation" , placeholder="Confirmar Contraseña" , id="pass2" required)
                if usuario.permisos === 2
                  .form-group
                    h5  Sucursal:
                    select.form-control.selectpicker(name="plaza", data-live-search="true")
                      for sucursal in sucursales
                        option(name="1") #{sucursal.plaza}
                  .form-group
                    h5  Permisos:
                    select.form-control(name="permisos")
                      option(name="administrador") Administrador
                      option(name="recepcionista") Recepcionista
                .form-group
                  h5  Estado:
                  select.form-control(name="status")
                    option(name="activo") Activo
                    option(name="inactivo") Inactivo
                .form-group
                input(type="submit" value="Actualizar" class="btn btn-lg btn-primary btn-block")

  // jQuery
  script(src='/public/vendor/jquery/jquery.min.js')
  // Bootstrap Core JavaScript
  script(src='/public/vendor/bootstrap/js/bootstrap.min.js')
  // Metis Menu Plugin JavaScript
  script(src='/public/vendor/metisMenu/metisMenu.min.js')
  // Custom Theme JavaScript
  script(src='/public/dist/js/sb-admin-2.js')
  script(src='/public/dist/js/bootstrap-select.min.js')
  script(src='/public/avisos/usuarioUpdate.js')
